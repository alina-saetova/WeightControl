<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calcs_background"
    tools:context="BodyFatPercentage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/radio_group"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true"
            android:text="Пол"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="54dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_but_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:buttonTint="@color/textNav"
                android:fontFamily="@font/rubik_mono_one"
                android:textColor="@color/textNav"
                android:text="Женcкий" />

            <RadioButton
                android:id="@+id/radio_but_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="30dp"
                android:buttonTint="@color/textNav"
                android:fontFamily="@font/rubik_mono_one"
                android:textColor="@color/textNav"
                android:text="Мужской" />

        </RadioGroup>

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/editText_weight"
            android:layout_below="@id/gender"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="Вес" />

        <EditText
            android:id="@+id/editText_weight"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rectangle"
            android:ems="7"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editText_weight"
            android:layout_below="@id/gender"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="кг" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/editText_height"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/weight"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="Рост" />

        <EditText
            android:id="@+id/editText_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText_weight"
            android:layout_marginTop="20dp"
            android:ems="7"
            style="@style/Widget.AppCompat.EditText"
            android:background="@drawable/edittext_rectangle"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editText_height"
            android:layout_below="@id/weight"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="см" />

        <TextView
            android:id="@+id/waist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/editText_waist"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/height"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="Талия" />

        <EditText
            android:id="@+id/editText_waist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText_height"
            android:layout_marginTop="20dp"
            android:ems="7"
            style="@style/Widget.AppCompat.EditText"
            android:background="@drawable/edittext_rectangle"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editText_waist"
            android:layout_below="@id/height"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="см" />

        <TextView
            android:id="@+id/hip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/editText_hip"
            android:layout_marginLeft="60dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/waist"
            android:layout_marginTop="58dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="Бедра" />

        <EditText
            android:id="@+id/editText_hip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText_waist"
            android:layout_marginTop="20dp"
            android:ems="7"
            style="@style/Widget.AppCompat.EditText"
            android:background="@drawable/edittext_rectangle"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editText_hip"
            android:layout_below="@id/waist"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="см" />

        <TextView
            android:id="@+id/neck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/editText_neck"
            android:layout_below="@id/hip"
            android:layout_marginTop="58dp"
            android:text="Шея"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_neck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText_hip"
            android:layout_marginTop="20dp"
            android:ems="7"
            style="@style/Widget.AppCompat.EditText"
            android:background="@drawable/edittext_rectangle"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/editText_neck"
            android:layout_below="@id/hip"
            android:layout_marginTop="58dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="14sp"
            android:text="см" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editText_neck"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="12sp"
            android:visibility="invisible"
            android:text="Результат"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_result"
            android:text="Рассчитать"
            android:background="@drawable/btn_rectangle"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="10dp" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="12sp"
            android:visibility="invisible">
            <TableRow>
                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorText"
                    android:text="Пониженное содержание жира" />

                <TextView
                    android:id="@+id/row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorText"
                    android:text="@string/_22" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorText"
                    android:text="Нормальное содержание жира" />

                <TextView
                    android:id="@+id/row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorText"
                    android:text="23%—34%" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorText"
                    android:text="Повышенное содержание жира" />

                <TextView
                    android:id="@+id/row3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorText"
                    android:text="35%—40%" />
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorText"
                    android:text="Очень высокое содержание жира" />

                <TextView
                    android:id="@+id/row4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textColor="@color/colorText"
                    android:text="> 40%" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

</ScrollView>