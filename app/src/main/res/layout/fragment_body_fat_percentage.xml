<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calcs_background"
    tools:context="BodyFatPercentage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="26dp"
            android:layout_toLeftOf="@id/radio_group"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Пол"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="54dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_but_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:buttonTint="@color/textNav"
                android:fontFamily="@font/rubik_mono_one"
                android:text="Женcкий"
                android:textColor="@color/textNav" />

            <RadioButton
                android:id="@+id/radio_but_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginTop="30dp"
                android:buttonTint="@color/textNav"
                android:fontFamily="@font/rubik_mono_one"
                android:text="Мужской"
                android:textColor="@color/textNav" />

        </RadioGroup>

        <TextView
            android:id="@+id/weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="45dp"
            android:layout_toLeftOf="@id/editText_weight"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Вес"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_weight"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/radio_group"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rectangle"
            android:ems="7"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@id/editText_weight"
            android:fontFamily="@font/rubik_mono_one"
            android:text="кг"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="58dp"
            android:layout_toLeftOf="@id/editText_height"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Рост"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_height"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_weight"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rectangle"
            android:ems="7"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weight"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="58dp"
            android:layout_toRightOf="@id/editText_height"
            android:fontFamily="@font/rubik_mono_one"
            android:text="см"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/waist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="58dp"
            android:layout_toLeftOf="@id/editText_waist"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Талия"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_waist"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rectangle"
            android:ems="7"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="58dp"
            android:layout_toRightOf="@id/editText_waist"
            android:fontFamily="@font/rubik_mono_one"
            android:text="см"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/hip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waist"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="58dp"
            android:layout_toLeftOf="@id/editText_hip"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Бедра"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_hip"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_waist"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rectangle"
            android:ems="7"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/waist"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="58dp"
            android:layout_toRightOf="@id/editText_hip"
            android:fontFamily="@font/rubik_mono_one"
            android:text="см"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/neck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="58dp"
            android:layout_toLeftOf="@id/editText_neck"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Шея"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/editText_neck"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_hip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittext_rectangle"
            android:ems="7"
            android:fontFamily="@font/rubik_mono_one"
            android:inputType="number|numberDecimal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hip"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="58dp"
            android:layout_toRightOf="@id/editText_neck"
            android:fontFamily="@font/rubik_mono_one"
            android:text="см"
            android:textColor="@color/textNav"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editText_neck"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Результат"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/textNav"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_rectangle"
            android:fontFamily="@font/rubik_mono_one"
            android:text="Рассчитать"
            android:textColor="@color/textNav" />

        <TableLayout
            android:id="@+id/table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/rubik_mono_one"
            android:textColor="@color/textNav"
            android:textSize="12sp">
            <!--android:visibility="invisible"-->


        <TableRow>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_mono_one"
                android:text="Пониженное\nсодержание жира"
                android:textColor="@color/textNav" />

            <TextView
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_mono_one"
                android:text="@string/_22"
                android:textColor="@color/textNav" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_mono_one"
                android:text="Нормальное\nсодержание жира"
                android:textColor="@color/textNav" />

            <TextView
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/rubik_mono_one"
                android:text="23%—34%"
                android:textSize="12sp"
                android:textColor="@color/textNav" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_mono_one"
                android:text="Повышенное\nсодержание жира"
                android:textColor="@color/textNav" />

            <TextView
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/rubik_mono_one"
                android:text="35%—40%"
                android:textSize="12sp"
                android:textColor="@color/textNav" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/rubik_mono_one"
                android:text="Очень высокое\nсодержание жира"
                android:textColor="@color/textNav" />

            <TextView
                android:id="@+id/row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/rubik_mono_one"
                android:text="> 40%"
                android:textSize="12sp"
                android:textColor="@color/textNav" />
        </TableRow>
    </TableLayout>

    </RelativeLayout>

    </ScrollView>